@model ResetPasswordViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <h2>Şİfre Yenileme Sayfası</h2>
    <form method="post">
        <label>Şifrenizi Girin</label>
        <input type="text" asp-for="Password" class="form-control" />
        <br />
        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
        <br />
        <button class="btn btn-primary">Şifreyi Güncelle</button>
    </form>
</div>